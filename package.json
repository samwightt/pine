{
  "name": "framework",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "web-test-runner \"src/**/*.test.tsx\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "relay": "relay-compiler --src ./src --schema schema.graphql --language typescript --artifactDirectory ./src/__generated__",
    "relay:watch": "relay-compiler --src ./src --schema schema.graphql --language typescript --artifactDirectory ./src/__generated__ --watch"
  },
  "dependencies": {
    "react": "^0.0.0-experimental-4ead6b530",
    "react-dom": "^0.0.0-experimental-4ead6b530",
    "react-relay": "^0.0.0-experimental-c818bac3",
    "relay-runtime": "^10.1.0",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "prettier": "^2.2.0",
    "relay-compiler-language-typescript": "^13.0.2",
    "snowpack": "^2.17.1",
    "graphql": "^15.4.0",
    "@babel/core": "^7.12.7",
    "babel-plugin-relay": "^10.1.0",
    "typescript": "^4.1.2",
    "autoprefixer": "^10.0.2",
    "babel-plugin-transform-commonjs": "^1.1.6",
    "postcss": "^8.1.9",
    "postcss-cli": "^8.3.0",
    "relay-compiler": "^10.1.0",
    "@snowpack/plugin-build-script": "^2.0.11",
    "@snowpack/plugin-dotenv": "^2.0.4",
    "@snowpack/plugin-react-refresh": "^2.3.7",
    "@snowpack/plugin-run-script": "^2.2.0",
    "@snowpack/plugin-typescript": "^1.1.0",
    "@snowpack/web-test-runner-plugin": "^0.1.4",
    "@types/chai": "^4.2.14",
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-relay": "^7.0.17",
    "@types/relay-runtime": "^10.1.2"
  }
}
