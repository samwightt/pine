{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    /* noEmit - Snowpack builds (emits) files, not tsc. */
    "noEmit": true,
    /* Additional Options */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error"
  }
}
